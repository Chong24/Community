<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nowcoder.community.dao.DiscussPostMapper">

    <sql id="seleceFileds">
        id, user_id, title, content, type, status, create_time, comment_count, score
    </sql>

    <sql id="insertFileds">
        user_id, title, content, type, status, create_time, comment_count, score
    </sql>

    <!--List<DiscussPost> selectDiscussPosts(int userId, int offset, int limit);-->
    <!--返回list的时候，resyltType填的是list中元素的类型-->
    <select id="selectDiscussPosts" resultType="com.nowcoder.community.entity.DiscussPost">
        select <include refid="seleceFileds"></include>
        from discuss_post
        where status != 2
        <if test="userId != 0">
            and user_id = #{userId}
        </if>
        order by type desc, create_time desc
        limit #{offset}, #{limit}
    </select>

    <!--int selectDiscussPostRows(@Param("userId") int userId);-->
    <select id="selectDiscussPostRows" resultType="int">
        select count(id)
        from discuss_post
        where status != 2
        <if test="userId != 0">
            and user_id = #{userId}
        </if>
    </select>

    <!--    int insertDiscussPost(DiscussPost discussPost);-->
    <insert id="insertDiscussPost" parameterType="com.nowcoder.community.entity.DiscussPost">
        insert into discuss_post(<include refid="insertFileds"></include>)
        values(#{userId},#{title},#{content},#{type},#{status},#{createTime},#{commentCount},#{score})
    </insert>

    <!-- DiscussPost selectDiscussPostById(int id);   -->
    <select id="selectDiscussPostById" resultType="com.nowcoder.community.entity.DiscussPost">
        select <include refid="seleceFileds"></include>
        from discuss_post
        where id = #{id}
    </select>

    <!--int updateCommentCount(int id, int commentCount);-->
    <insert id="updateCommentCount">
        UPDATE discuss_post set comment_count = #{commentCount} where id = #{id}
    </insert>

</mapper>